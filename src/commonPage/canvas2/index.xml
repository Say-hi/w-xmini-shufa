<view style="width: {{ backImageInfo.showWidth }}px; height: {{ backImageInfo.showHeight }}px;"
      class="comparison pr bgfff">
  <image style="z-index: {{ backImageInfo.zIndex }}"
         class="pa bgPic peN"
         src="{{ backImageInfo.path }}"></image>
  <view wx:for="{{ imgArr }}"
        wx:key="*90"
        data-index="{{ index }}"
        bindtouchstart="itemStart"
        class="pa {{ reload ? 'tr5' : '' }}"
        style="transform: scale({{ item.scale }}) rotate({{ item.rotate }}deg); top: {{ item.top }}px; left: {{ item.left }}px; width: {{ item.showWidth }}px; height: {{ item.showHeight }}px; z-index: {{ item.zIndex }}"
        bindtouchend="itemEnd">
    <!--边框-->
    <view wx:if="{{ item.border }}">

      <!--四边-->
      <!--上边-->
      <image wx:for="{{ item.border.x }}" wx:for-item="xItem" wx:for-index="xIndex" style="position:absolute; top: -{{ item.border.width / 2 }}px; left: {{ (item.border.x - 1 - xIndex) * item.border.width / 2  - item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform:rotate(45deg);" src="{{ item.border.path }}"></image>
      <!--左边-->
      <image wx:for="{{ item.border.y }}" wx:for-item="xItem" wx:for-index="xIndex" style="position:absolute; top: {{ (item.border.y - 1 - xIndex) * item.border.width / 2 - item.border.width / 2  }}px; left: -{{ item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform:rotateZ(45deg);" src="{{ item.border.path }}"></image>
      <!--下边-->
      <image wx:for="{{ item.border.x }}" wx:for-item="xItem" wx:for-index="xIndex" style="position:absolute; bottom: -{{ item.border.width / 2 }}px; left: {{ (item.border.x - 1 - xIndex) * item.border.width / 2 - item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform: rotateY(180deg) rotate(225deg);" src="{{ item.border.path }}"></image>
      <!--右边-->
      <image wx:for="{{ item.border.y }}" wx:for-item="xItem" wx:for-index="xIndex" style="position:absolute; top: {{ (item.border.y - 1 - xIndex) * item.border.width / 2 - item.border.width / 2  }}px; right: -{{ item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform: rotateY(180deg) rotate(45deg);" src="{{ item.border.path }}"></image>
      <!--<image style="position:absolute; top: 0px; left: 0px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform:rotate(45deg);" src="{{ item.border.path }}"></image>-->
      <!--四角-->
      <!--<image style="position:absolute; top: -{{ item.border.width / 2 }}px; left: -{{ item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform:rotate(45deg);" src="{{ item.border.path }}"></image>-->
      <!--<image style="position:absolute; top: -{{ item.border.width / 2 }}px; right: -{{ item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform:rotate(135deg);" src="{{ item.border.path }}"></image>-->
      <!--<image style="position:absolute; bottom: -{{ item.border.width / 2 }}px; left:-{{ item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform:rotate(315deg);" src="{{ item.border.path }}"></image>-->
      <image style="position:absolute; bottom: -{{ item.border.width / 2 }}px; right:-{{ item.border.width / 2 }}px; width:{{ item.border.width }}px; height:{{ item.border.width }}px; transform:rotate(225deg);" src="{{ item.border.path }}"></image>
    </view>
    <image style="width: 100%; height: 100%; position:absolute; top:0; left:0;" src="{{ item.path }}"></image>
  </view>
</view>

<view class="mask" wx:if="{{ cutImg }}">
  <view class="pa mask-out" style="width: {{ chooseAreaInfo.imgW }}px; height: {{ chooseAreaInfo.imgH }}px; z-index: 90;">
    <image src="{{ chooseAreaInfo.path }}" style="width: 100%; height: 100%;"></image>
    <view catchtouchstart="chooseAreaStart" catchtouchmove="chooseAreaMove" data-type="img" class="pa chooseArea" style="width: {{ chooseAreaInfo.w }}px;height: {{ chooseAreaInfo.h }}px; top: {{ chooseAreaInfo.y || 0 }}px;left: {{ chooseAreaInfo.x || 0 }}px;">
      <view catchtouchstart="chooseAreaStart" catchtouchmove="chooseAreaMove" data-type="point" class="tapPoint pa"></view>
    </view>
  </view>
  <view catchtap="canvasCut" class="cut tac f30 c323232 pa">裁切图片</view>
</view>


