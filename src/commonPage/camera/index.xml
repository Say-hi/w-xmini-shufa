<jwqcapsule capsule="{{ capsule }}">
  <text class="cfff">叠影纠错</text>
</jwqcapsule>


<!--比较区域 -s-->
<camera wx:if="{{ options.type == 1 }}"  class="comCamera pr">
  <cover-image bindtouchstart="touchStart" bindtouchmove="touchMove" style="transform: scale({{ scale }}); top: {{ moveY }}rpx; left: {{ moveX }}rpx;" class="pa mainPic" mode="widthFix" src="https://c.jiangwenqiang.com/lqsy/list1.png"></cover-image>
  <cover-image bindtouchstart="touchStart" bindtouchmove="touchMove" wx:if="{{ bottomImg[bottomIndex].i }}" class="pa peN bgPic" src="{{ bottomImg[bottomIndex].i }}"></cover-image>
</camera>
<!--比较区域 -e-->

<!--比较区域 -s-->
<view wx:if="{{ options.type != 1 }}"  class="comparison pr bgfff">
  <image class="pa bgPic" src="https://c.jiangwenqiang.com/api/logo.jpg"></image>
  <image bindtouchstart="touchStart" style="transform: scale({{ scale }}) rotate({{ rotate }}deg); top: {{ moveY }}rpx; left: {{ moveX }}rpx;" bindtouchmove="touchMove" class="pa mainPic" mode="widthFix" src="{{ main }}"></image>
  <image bindtouchstart="touchStart" bindtouchmove="touchMove" class="pa bgPic" src="{{ bottomImg[bottomIndex].i }}"></image>
</view>
<!--比较区域 -e-->

<slider wx:if="{{ options.type == 1 }}" style="margin: 0 80rpx;" value="150" min="100" max="200" bindchanging="changeSlider"></slider>
<!--底格 -s-->
<view class="bgfff mt20 f18 c787878 df typeChoose">
<view class="df dfc dfac p20">
  <text class="jwqfont jwqyanjing"></text>
  <text class="mt10">字格</text>
</view>
<view catchtap="chooseType"
      data-index="{{ index }}"
      wx:for="{{ bottomImg }}"
      wx:key
      class="df dfc dfac p20 {{ index == bottomIndex ? 'active' : '' }} tr5">
  <text wx:if="{{ !item.i }}" class="jwqfont jwqwu tac"></text>
  <image wx:else src="{{ item.i }}"></image>
  <text class="mt10 {{ index == bottomIndex ? 'cff362c' : '' }}">{{ item.t }}</text>
</view>
</view>
<!--底格 -e-->

<view class="cameraSe df p20">
  <image catchtap="_toggleMask" data-type="cameraMask" src="https://c.jiangwenqiang.com/lqsy/camera_share.png"></image>
  <navigator open-type="navigateBack"><image src="https://c.jiangwenqiang.com/lqsy/camera_back.png"></image></navigator>
</view>

<!--照相机模式 -s-->
<view class="mask cameraMask o0 {{ cameraMaskAnimate ? 'o1' : '' }} tr5">
<view class="bgfff br10 mask-in ">
  <view class="f30 tac lh60 fw7">分享比对内容</view>
  <view class="df dfac dfb p30">
    <navigator url="/commonPage/camera/index?type={{ index + 1 }}" class="df dfc dfac f25 c323232" wx:for="{{ cameraType }}" wx:key>
      <text style="background: {{ index <= 0 ? '#009944' : index == 1 ? '#ec6941' : '#00a0e9' }};" class="jwqfont {{ item.i }} cfff"></text>
      <text class="mt10">{{ item.t }}</text>
    </navigator>
  </view>
  <view class="mask-btn bt1">
    <view class="flex1 tac" catchtap="_toggleMask" data-type="cameraMask" >取消</view>
  </view>
</view>
</view>
<!--照相机模式 -e-->
<canvas class="cameraCanvas" canvas-id="cOne"></canvas>
<!--错误弹窗-->
<toast toast="{{ toast }}"></toast>
