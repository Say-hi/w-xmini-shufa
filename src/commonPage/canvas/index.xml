<view wx:if="{{ options.type != 1 }}"  class="comparison pr bgfff">
  <image class="pa bgPic" src="https://c.jiangwenqiang.com/api/logo.jpg"></image>
  <image bindtouchstart="touchStart" style="transform: scale({{ scale }}) rotate({{ rotate }}deg); top: {{ moveY }}rpx; left: {{ moveX }}rpx;" bindtouchmove="touchMove" class="pa mainPic" mode="widthFix" src="{{ main }}"></image>
  <image bindtouchstart="touchStart" bindtouchmove="touchMove" class="pa bgPic" src="{{ bottomImg[bottomIndex].i }}"></image>
</view>
<!--错误弹窗-->
<toast toast="{{ toast }}"></toast>
