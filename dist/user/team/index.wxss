.topNav {
  display: flex;
  align-items: center;
}
.topNav .active {
  color: #e60012;
  position: relative;
}
.topNav .active:after {
  content: '';
  width: 100%;
  height: 2rpx;
  background: #e60012;
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  transform: translateX(-50%);
}
.gift {
  background: #f8f0ba;
  padding: 10rpx 20rpx;
  color: #f73650;
}
.gift text {
  margin-right: 20rpx;
}
.hliTop {
  display: flex;
  align-items: center;
}
.hliTop .hliTopImg {
  margin-right: 13rpx;
  height: 77rpx;
  width: 77rpx;
}
.hliTop .hliTopName {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  height: 100%;
}
.nextTeam {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  padding-right: 80rpx;
}
