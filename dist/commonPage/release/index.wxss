.swiperArea {
  height: 100%;
}
.swiperArea image {
  width: 100%;
  height: 100%;
}
.big {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 200rpx;
}
.mini {
  top: 90%;
  left: 10%;
  font-size: 80rpx;
  transform: translate(-50%, -50%);
}
.inputMoney {
  border: 1px solid #b5b5b5;
  margin: 0 10rpx;
}
.warehouse {
  padding-right: 70rpx;
}
.arrow::after {
  width: 10rpx;
  height: 10rpx;
}
.specs {
  position: fixed;
  bottom: 0;
  left: 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding-bottom: 20rpx;
}
.specs .specConfirm {
  background: linear-gradient(90deg, #ff7814, #ff2e3b);
  border-radius: 40rpx;
  width: 90%;
  transform: translateX(5%);
}
.releaseBtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #d2d2d2;
  z-index: 95;
}
.releaseBtn .cfff {
  background: #ff362c;
}
