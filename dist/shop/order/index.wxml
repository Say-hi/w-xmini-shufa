<!--取消订单 -s-->
<view class="mask">
  <view class="cancel bgfff">
    <view class="f40 c323232 tac fw7 mt20">请选择原因</view>
    <view class="f30 c323232 tac mt10">订单一旦取消。无法恢复，优惠券将原路返回</view>
    <view class="f30 c323232 tac mt10">收货地址填错了</view>
    <view class="p2030 df dfb bt1 {{ index < 1 ? 'mt10' : '' }}" catchtap="_cancelChoose" data-index="{{ index }}" wx:for="{{ cancelArr }}" ><text>{{ item }}</text><text class="jwqfont cff362c {{ cancelIndex == index ? 'jwqgouxuan' : 'jwqwxz' }}"></text></view>
    <view class="f33 cfff cancelBtn df dfac">
      <view  class="cancel">暂不取消</view>
      <view  class="confirm">确定取消</view>
    </view>
  </view>
</view>
